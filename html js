        <body>
            <div class="sign-in">
                <div class="sign-in-wraper">
                    
            <form id="form">
                <h1>Sign in</h1>
                <input  type="text" name="name" id="name" placeholder="Name" >
                <input  type="text" name="Lastname" id="lname" placeholder="Lastname">
                <input  type="email" name="mail" id="email" placeholder="Email">
                <input  type="password" name="pass"  id="pass" oninput="send()" placeholder="Password">
                <input  type="password" name="repass" id="repass" oninput="send2()" placeholder="Repeat password">
                <input  type="submit" id="button" style="height: 50px; width: 33.33%;">
            </form>
                </div>
            </div>
            
             <script>
                
                function send(){
                    let pass = document.getElementById("pass").value
                    if(pass.length < 6 && search(pass)){
                        document.getElementById("pass").style = "color:red;"
                    }else {
                        document.getElementById("pass").style = "color:green;"
                    }
                    
                    
                }
                function search(a){
                    let main_arr = a.split('');
                    let chars_ = "abcdefghijklmnopqrstuvwxyz";
                    let chars_arr = chars_.split('');
                    let sum = 0;
                    for (let char  of main_arr) {
                        for (let i of chars_arr) {
                           if(char == i){
                              ++sum;
                           } 
                        }
                    }
                   let set_sum = (sum > 0 ) ? true : false;
                   return set_sum; 
                }

                function send2(){
                    
                    
                    let repass = document.getElementById("repass").value
                    if(repass.length < 6 && search(repass)){
                        document.getElementById("repass").style = "color:red;"
                    }else {
                        document.getElementById("repass").style = "color:green;"
                        
                        let pass = document.getElementById("pass").value
                    
                    if(pass==repass){
                        document.getElementById("repass").style = "background-color:green;color:white;"
                        document.getElementById("pass").style = "background-color:green;color:white;"
                    }else{
                        document.getElementById("repass").style = "background-color:red;color:white;"
                        document.getElementById("pass").style = "background-color:red;color:white;"
                    }
                        
                    }
                   }
                
                
            </script>
            </body>
